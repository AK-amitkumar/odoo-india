<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_india_account_config_settings" model="ir.ui.view">
            <field name="name">india account settings</field>
            <field name="model">india.account.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Indian Accounting" version="7.0" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <separator string="Indian Localization"/>
                    <group>
                    	<label for="id" string="Accounting &amp; Finance"/>
                        <div name="accounting_config">
                           	<div>
		                        <field name="module_l10n_in_excise_customer_invoice" class="oe_inline"/>
		                        <label for="module_l10n_in_excise_customer_invoice"/>
		                        <br/>
		                        <button name='%(base.action_res_company_form)d' type="action"
                                   string="Configure tax details on company" class="oe_link" attrs="{'invisible':[('module_l10n_in_excise_customer_invoice','=',False)]}"/>
                                   <br/>
                                   <button name='%(base.action_partner_customer_form)d' type="action"
                                   string="Configure tax details on partners" class="oe_link" attrs="{'invisible':[('module_l10n_in_excise_customer_invoice','=',False)]}"/>
                   			</div>
                   			<div>
                   				<field name="module_l10n_in_account_check_writing_idbi" class="oe_inline"/>
		                        <label for="module_l10n_in_account_check_writing_idbi"/>
                   			</div>
                   			<div>
                   				<field name="module_l10n_in_tax_register" class="oe_inline"/>
		                        <label for="module_l10n_in_tax_register"/>
                   			</div>
                   			<div>
                   				<field name="module_l10n_in_cform" class="oe_inline"/>
		                        <label for="module_l10n_in_cform"/>
                   			</div>
                  		</div>
                  		</group>
                  		<group>
                  		<label for="id" string="Sales"/>
                  		<div name="sale_config">
	                  		<div>
		                        <field name="module_l10n_in_packing" class="oe_inline"/>
		                        <label for="module_l10n_in_packing"/>
	                		</div>
	                  		<div>
	                  			<field name="module_l10n_in_dealers_discount" class="oe_inline"/>
		                        <label for="module_l10n_in_dealers_discount"/>
	                  		</div>
	                  			<div>
	                  				<field name="module_l10n_in_delivery_challan" class="oe_inline"/>
		                        <label for="module_l10n_in_delivery_challan"/>
		                        <button name='%(base.action_res_company_form)d' type="action"
	                                  string="Configure Delivery Challan details on company" class="oe_link" attrs="{'invisible':[('module_l10n_in_delivery_challan','=',False)]}"/>
	                  			</div>
	                  			<div>
	                  				<field name="module_l10n_in_form_402" class="oe_inline"/>
		                        <label for="module_l10n_in_form_402"/>
		                        <button name='%(base.action_res_company_form)d' type="action"
	                                  string="Configure Form 402 details on company" class="oe_link" attrs="{'invisible':[('module_l10n_in_form_402','=',False)]}"/>
	                  			</div>
	                  			<div>
	                  				<field name="module_sale_after_service" class="oe_inline"/>
		                        <label for="module_sale_after_service"/>
	                 		</div>
                 		</div>
						</group>
                  		<group>                 		
                 		<label for="id" string="Purchase"/>
                 		<div name="purchase_config">
	               			<div>
		               			<field name="default_freight" class="oe_inline"/>
		                      	<label for="default_freight"/>
	               			</div>
               			</div>
						</group>
                  		<group>               			
               			<label for="id" string="General"/>
                 		<div name="general">
               			</div>
                 	</group>
                </form>
            </field>
        </record>
        
        <record id="action_india_account_config" model="ir.actions.act_window">
            <field name="name">Configure Indian Accounting</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">india.account.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_india_account_config" name="Indian Localization" parent="base.menu_config"
            sequence="14" action="action_india_account_config"/>
        
    </data>
</openerp>