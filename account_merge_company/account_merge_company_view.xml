<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

	<record id="view_setup_company_merge2" model="ir.ui.view">
		<field name="name"> Merge Company Configuration</field>
		<field name="model">company.account.merge</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Merge Company">
				<separator colspan="4" string="Select Companies For Merge"/>
				<field name="merge_companies_ids" nolabel='1'/>
				<group colspan="4" col="6">
					<button  icon="gtk-cancel" special="cancel" string="Close"/>
					<button icon='gtk-ok' name="do_merge" string="Ok" type="object"/>
				</group>
			</form>
		</field>
	</record>

	<record id="action_setup_company_merge2" model="ir.actions.act_window">
		<field name="name"> Merge Company Configurations</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">company.account.merge</field>
		<field name="view_id" ref="view_setup_company_merge2"/>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<record id="view_setup_company_merge" model="ir.ui.view">
		<field name="name">Company Configuration</field>
		<field name="model">setup.company.merge</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Company Configuration">
				<group string="Configaration Contents">
					<group colspan="5">
						<group colspan="2">
							<field name="company_id" invisible="1"/>
							<field name="name" required="True"/>
							<field name="website"/>
							<field name="street"/>
							<field name="street2"/>
							<field name="zip"/>
							<field name="city"/>
							<field name="country_id"/>
							<field name="state_id"/>
							<field name="phone"/>
							<field name="email"/>
							<field name="account_no"/>
							<field name="currency" widget="selection"/>
						</group>
						<newline/>
						<group colspan="2">
							<separator colspan="4" string="Your Logo - Use a size of about 450x150 pixels."/>
							<field colspan="5" name="logo" widget="image" nolabel="1"/>
						</group>
					</group>
					<button special="cancel" string="_Close" icon="gtk-cancel"/>
					<button  icon="gtk-go-forward" name="execute" string="Next" type="object"/>
				</group>    
			</form>
		</field>
	</record>

	<record id="action_setup_company_merge" model="ir.actions.act_window">
		<field name="name">Company Configuration</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">setup.company.merge</field>
		<field name="view_id" ref="view_setup_company_merge"/>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem name="Merge Company" id="menu_setup_company_merge" parent="account.menu_finance" 		action="action_setup_company_merge" sequence="30"/>

    </data>
</openerp>
