<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="view_split_company_data" model="ir.ui.view">
        <field name="name">Account Split Company Data</field>
        <field name="model">account.split.company.data</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Split Company Data">
                <group colspan="2">
                    <field name="company_id"/>
                    <field name="type" />
                    <field name="period_id" attrs="{'invisible': [('type','=','percent')],'required':[('type','!=','percent')]}" domain="[('company_id','=',company_id)]"/>
                    <group colspan="4">
                        <field name="first_comp_percent" on_change="onchange_percentage(first_comp_percent)" attrs="{'invisible': [('type','=','period')],'required':[('type','!=','period')]}"/>
                        <field name="second_comp_percent" attrs="{'invisible': [('type','=','period')],'required':[('type','!=','period')]}"/>
                    </group>
                    <field name="first_company_name"/>
                    <field name="second_company_name"/>
                </group>
                <newline/>
                <group colspan="2">
                    <button special="cancel" string="_Close" icon="gtk-cancel"/>
                    <button  icon="gtk-apply" name="split_data" string="Split" type="object"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_split_company_data" model="ir.actions.act_window">
        <field name="name">Account Split Company Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.split.company.data</field>
        <field name="view_id" ref="view_split_company_data"/>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="Split Company Data" id="menu_split_company_data" parent="account.menu_finance" action="action_split_company_data" sequence="31"/>

    </data>
</openerp>
