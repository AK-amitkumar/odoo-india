<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Indent Report Tree View -->
        <record id="view_indent_report_tree" model="ir.ui.view">
            <field eval="1" name="priority"/>
            <field name="name">indent.report.tree</field>
            <field name="model">indent.report</field>
            <field name="arch" type="xml">
                <tree string="Indent Analysis" create="false" delete="false">
                    <field name="name" invisible="context.get('indent_id_view',False)"/>
                    <field name="date"/>
                    <field name="indentor_id" invisible="context.get('indentor_id_view',False)"/>
                    <field name="indent_id" invisible="1"/>
                    <field name="year" invisible="1"/>
                    <field name="day" invisible="1"/>
                    <field name="month" invisible="1"/>
                    <field name="product_code" invisible="context.get('product_id_view',False)"/>
                    <field name="product_id" invisible="context.get('product_id_view',False)"/>
                    <field name="department_id" invisible="context.get('department_id',True)"/>
                    <field name="requirement" invisible="context.get('requirement',True)"/>
                    <field name="required_date"/>
                    <field name="type" invisible="context.get('type',True)"/>
                    <field name="item_for" invisible="context.get('item_for',True)"/>
                    <field name="analytic_account_id" invisible="context.get('analytic_account_id',True)" groups="analytic.group_analytic_accounting"/>
                    <field name="nbr" sum="# of Lines" invisible="1"/>
                    <field name="product_uom_qty" sum="# of Qty"/>
                    <field name="product_uom" invisible="context.get('product_uom_view',False)"/>
                    <field name="purpose" invisible="1"/>
                    <field name="price_unit"/>
                    <field name="price_total" sum="Total Price"/>
                    <field name="state" invisible="context.get('state',True)"/>
                </tree>
            </field>
        </record>

        <!-- Indent Graph View -->
        <record id="view_indent_report_graph" model="ir.ui.view">
             <field name="name">indent.report.graph</field>
             <field name="model">indent.report</field>
             <field name="arch" type="xml">
                 <graph string="Indent Analysis" type="bar">
                     <field name="product_id"/>
                     <field name="price_total"/>
                     <field name="state" group="True"/>
                 </graph>
             </field>
        </record>

        <!-- Indent Search Search View -->
        <record id="view_indent_report_search" model="ir.ui.view">
            <field name="name">indent.report.search</field>
            <field name="model">indent.report</field>
            <field name="arch" type="xml">
                <search string="Indent Analysis">
                    <field name="date"/>
                    <filter string="Indent" name="indent" domain="[('contract','=',False)]"/>
                    <filter string="Contract" name="contract" domain="[('contract','=',True)]"/>
                    <separator/>
                    <filter string="Draft" name="state_draft" domain="[('state','=','draft')]"/>
                    <filter string="Waiting For Approval" name="state_waiting_approval" domain="[('state','=','waiting_approval')]"/>
                    <filter string="Inprogress" name="state_inprogress" domain="[('state','=','inprogress')]"/>
                    <filter string="Received" name="state_received" domain="[('state','=','received')]"/>
                    <filter string="Rejected" name="state_reject" domain="[('state','=','reject')]"/>
                    <separator/>
                    <filter icon="terp-personal" string="My Indents" help="My Indents" domain="[('indentor_id', '=', uid)]"/>
                    <field name="product_id"/>
                    <field name="indentor_id"/>
                    <group string="Display">
                        <filter name="group_department" string="Department" icon="terp-stock_symbol-selection" context="{'department_id': False}"/>
                        <filter name="group_requirement" string="Requirement" icon="terp-stock_symbol-selection" context="{'requirement': False}"/>
                        <filter name="group_type" string="Type" icon="terp-stock_symbol-selection" context="{'type': False}"/>
                        <filter name="group_item_for" string="Item For" icon="terp-stock_symbol-selection" context="{'item_for': False}"/>
                        <filter name="group_analytic_account_id" string="Project" icon="terp-stock_symbol-selection" context="{'analytic_account_id': False}"/>
                        <filter name="group_state" string="State" icon="terp-stock_symbol-selection" context="{'state': False}"/>
                    </group>
                    <group expand="1" string="Group By...">
                        <filter string="Indent" name="Indent" context="{'group_by':'indent_id','indent_id_view': True}"/>
                        <filter string="Indentor" name="Indentor" context="{'group_by':'indentor_id','indentor_id_view': True}"/>
                        <filter string="Product" context="{'group_by':'product_id','product_id_view':True}"/>
                        <filter string="Unit of Measure" context="{'group_by':'product_uom','product_uom_view': True}"/>
                        <filter string="Department" context="{'group_by':'department_id','department_id_view': True}"/>
                        <filter string="Requirement" context="{'group_by':'requirement','requirement_view': True}"/>
                        <filter string="Type" context="{'group_by':'type','type_view': True}"/>
                        <filter string="Item For" context="{'group_by':'item_for','item_for_view': True}"/>
                        <filter string="Project" context="{'group_by':'analytic_account_id','analytic_account_id_view': True}" groups="analytic.group_analytic_accounting"/>
                        <filter string="Status" context="{'group_by':'state'}"/>
                        <filter string="Day" context="{'group_by':'day'}"/>
                        <filter string="Month" name="order_month" context="{'group_by':'month'}"/>
                        <filter string="Year" context="{'group_by':'year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Indent Report Action -->
        <record id="action_indent_report" model="ir.actions.act_window">
            <field name="name">Indent Analysis</field>
            <field name="res_model">indent.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,graph</field>
            <field name="search_view_id" ref="view_indent_report_search"/>
            <field name="view_id" ref="view_indent_report_tree"/>
            <field name="context">{'search_default_year':1,'search_default_month':1,'search_default_Indentor':1,'group_by_no_leaf':0,'group_by':[]}</field>
            <field name="help">This report performs analysis on your indents.</field>
        </record>

        <!-- Indent Report Menus -->
        <menuitem action="action_indent_report" id="menu_indent_report" parent="stock.next_id_61" sequence="5"/>

    </data>
</openerp>
