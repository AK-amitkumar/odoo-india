<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Indentor Wise Indent Report Tree View -->
        <record id="view_indentor_wise_indent_report_tree" model="ir.ui.view">
            <field eval="1" name="priority"/>
            <field name="name">indentor.wise.indent.report.tree</field>
            <field name="model">indentor.wise.indent.report</field>
            <field name="arch" type="xml">
                <tree string="Indentor Wise Indent Analysis" create="false" delete="false">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="authority"/>
                    <field name="indentor_id"/>
                    <field name="indent_id" invisible="1"/>
                    <field name="year" invisible="1"/>
                    <field name="day" invisible="1"/>
                    <field name="month" invisible="1"/>
                    <field name="department_id"/>
                    <field name="requirement"/>
                    <field name="type"/>
                    <field name="item_for"/>
                    <field name="nbr" sum="# of Lines"/>
                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Indentor Wise Indent Search View -->
        <record id="view_indentor_wise_indent_report_search" model="ir.ui.view">
            <field name="name">indentor.wise.indent.report.search</field>
            <field name="model">indentor.wise.indent.report</field>
            <field name="arch" type="xml">
                <search string="Indentor Wise Indent Analysis">
                    <field name="date"/>
                    <filter string="Indent" name="indent" domain="[('contract','=',False)]"/>
                    <filter string="Contract" name="contract" domain="[('contract','=',True)]"/>
                    <separator/>
                    <filter string="Draft" name="state_draft" domain="[('state','=','draft')]"/>
                    <filter string="Waiting For Approval" name="state_waiting_approval" domain="[('state','=','waiting_approval')]"/>
                    <filter string="Inprogress" name="state_inprogress" domain="[('state','=','inprogress')]"/>
                    <filter string="Received" name="state_received" domain="[('state','=','received')]"/>
                    <filter string="Rejected" name="state_reject" domain="[('state','=','reject')]"/>
                    <separator/>
                    <filter icon="terp-personal" string="My Indents" help="My Indents" domain="[('indentor_id', '=', uid)]"/>
                    <field name="authority"/>
                    <field name="indentor_id"/>
                    <group expand="1" string="Group By...">
                        <filter string="Indent" name="Indent" context="{'group_by':'indent_id'}"/>
                        <filter string="Indentor" name="Indentor" context="{'group_by':'indentor_id'}"/>
                        <filter string="Authority" name="Authority" context="{'group_by':'authority'}"/>
                        <filter string="Department" context="{'group_by':'department_id'}"/>
                        <filter string="Requirement" context="{'group_by':'requirement'}"/>
                        <filter string="Type" context="{'group_by':'type'}"/>
                        <filter string="Item For" context="{'group_by':'item_for'}"/>
                        <filter string="Project" context="{'group_by':'analytic_account_id'}" groups="analytic.group_analytic_accounting"/>
                        <filter string="Status" context="{'group_by':'state'}"/>
                        <filter string="Day" context="{'group_by':'day'}"/>
                        <filter string="Month" name="order_month" context="{'group_by':'month'}"/>
                        <filter string="Year" context="{'group_by':'year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Indentor Wise Indent Report Action -->
        <record id="action_indentor_wise_indent_report" model="ir.actions.act_window">
            <field name="name">Authority Wise Indent Analysis</field>
            <field name="res_model">indentor.wise.indent.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="view_indentor_wise_indent_report_search"/>
            <field name="view_id" ref="view_indentor_wise_indent_report_tree"/>
            <field name="context">{'search_default_Authority':1,'group_by_no_leaf':0,'group_by':[]}</field>
            <field name="help">This report performs analysis on your indents.</field>
        </record>

        <!-- Indentor Wise Indent Report Menus -->
        <menuitem action="action_indentor_wise_indent_report" id="menu_indentor_wise_indent_report" parent="stock.next_id_61" sequence="6"/>

    </data>
</openerp>
