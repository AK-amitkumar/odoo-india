<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="view_stock_last_receipt_tree" model="ir.ui.view">
        <field name="name">report.last.receipt.stock.move.tree</field>
        <field name="model">report.last.receipt.stock.move</field>
        <field name="arch" type="xml">
            <tree string="" create="false" delete="false">
                <field name="product_id" invisible="context.get('product_id_view',False)"/>
                <field name="product_uom" invisible="context.get('product_uom_view',False)"/>
                <field name="product_qty" sum="Total Quantity" invisible="not context.get('inward_view',True)"/>
                <field name="receipt_value" sum="Value" invisible="not context.get('receipt_view',True)"/>
                <field name="last_receipt_date"  invisible="not context.get('receipt_view',True)"/>
                <field name="last_issue_date"   invisible="not context.get('receipt_view',True)"/>
                <field name="not_moved_months" invisible="not context.get('receipt_view',True)"/>
           </tree>
        </field>
    </record>

    <record id="view_stock_last_receipt_search" model="ir.ui.view">
        <field name="name">report.last.receipt.stock.move.search</field>
        <field name="model">report.last.receipt.stock.move</field>
        <field name="arch" type="xml">
            <search string="Last Receipt Date">
                <field name="product_id" default_focus="1"/>
                <group expand="1" string="Group By...">
                    <filter name="group_product" string="Product" icon="terp-accessories-archiver" context="{'group_by':'product_id','product_id_view': True}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_stock_last_receipt_report" model="ir.actions.act_window">
        <field name="name">Last Receipt Date</field>
        <field name="res_model">report.last.receipt.stock.move</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id"  ref="view_stock_last_receipt_search"/>
        <field name="help">Inventory in order of last receipt date report.</field>
    </record>
    
    <menuitem action="action_stock_last_receipt_report" id="menu_action_stock_move_last_receipt_report" parent="stock.next_id_61" sequence="3"/>
    
</data>
</openerp>
