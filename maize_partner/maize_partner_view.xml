<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="maize_inherit_partner_tree_view" model="ir.ui.view">
            <field name="name">inherit.maize.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
            	<field name="name" position="before">
            		<field name="supp_code"/>
            	</field>
            </field>
          </record>
        <!-- Inherit the partner Form-->
        <record id="maize_inherit_partner_form_view" model="ir.ui.view">
            <field name="name">inherit.maize.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
               	<xpath expr="//div[@name='buttons']" position='after'>
               		<group>
               			<group>
            				<field name="co_code" />
            				<field name="supp_code"/>
            				<field name="bank_code_id"/>
            				<field name="series_id"/>
            				<field name="c_form"/>
            			</group>
              			<group>
            				<field name="raw_code_id" widget="selection"/>
            				<field name="tax_code_id" widget="selection"/>
            				<field name="md_code"/>
            				<field name="tds_per"/>
            				<field name="pan_no"/>
            			</group>
            		</group>

           		</xpath>

               	<xpath expr="//field[@name='street']" position='replace'>
            		<field name="street" placeholder="Address1"/>
           		</xpath>
               	<xpath expr="//field[@name='street2']" position='replace'>
            		<field name="street2" placeholder="Address2"/>
           		</xpath>
            	<xpath expr="//field[@name='street2']" position='after'>
            		<field name="street3" placeholder="Address3"/>
           		</xpath>

				<xpath expr="//field[@name='bank_ids']" position='before'>
		       		<group>
		            	<group>H
		            		<field name="stno_1"/>
		            		<field name="stno_2" string="Tin No"/>
		            		<field name="cst_no"/>
		            	</group>
		            	<group>
		            		<field name="ecc_code"/>
		            		<field name="ser_tax_reg_no"/>
		            	</group>
		           	</group>
				</xpath>

        	</field>
       	</record>
       	<!-- Raw code -->
        <record id="row_code_form_view" model="ir.ui.view">
            <field name="name">row.code.form</field>
            <field name="model">row.code</field>
            <field name="arch" type="xml">
                <form string="Row Code" version="7.0">
                	<sheet>
	                    <group>
	                    	<group col="4">
		                        <field name="code"/>H
		                        <field name="name"/>
	                        </group>
	                    </group>
                    </sheet>H
                </form>
            </field>
        </record>
        <record id="row_code_list_view" model="ir.ui.view">
            <field name="name">row.code.list</field>
            <field name="model">row.code</field>
            <field name="arch" type="xml">
                <tree string="Row Code" version="7.0">
	                <field name="code"/>
	                <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="row_code_form_action" model="ir.actions.act_window">
            <field name="name">Raw Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">row.code</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="row_code_list_view"/>
        </record>



        <menuitem action="row_code_form_action"
            groups="base.group_no_one"
            id="menu_maize_row_code"
            parent="maize_product.menu_maize_config" sequence="3"/>


       	<!-- Tax code -->
        <record id="tax_code_form_view" model="ir.ui.view">
            <field name="name">tax.code.form</field>
            <field name="model">tax.code</field>
            <field name="arch" type="xml">
                <form string="Tax Code" version="7.0">
                	<sheet>
	                    <group>
	                    	<group col="4">
		                        <field name="code"/>
		                        <field name="name"/>
	                        </group>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="tax_code_list_view" model="ir.ui.view">
            <field name="name">tax.code.list</field>
            <field name="model">tax.code</field>
            <field name="arch" type="xml">
                <tree string="Tax Code" version="7.0">
	                <field name="code"/>
	                <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="tax_code_form_action" model="ir.actions.act_window">
            <field name="name">Tax Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tax.code</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="tax_code_list_view"/>
        </record>

        <menuitem action="tax_code_form_action"
            groups="base.group_no_one"
            id="menu_maize_tax_code"
            parent="maize_product.menu_maize_config" sequence="4"/>

        <!--Supplier series -->
        <record id="po_series_form_view" model="ir.ui.view">
            <field name="name">supplier.series.form</field>
            <field name="model">supplier.series</field>
            <field name="arch" type="xml">
                <form string="PO Series" version="7.0">
                    <sheet>
                        <group>
                            <group col="4">
                                <field name="code"/>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="po_series_list_view" model="ir.ui.view">
            <field name="name">supplier.series.tree</field>
            <field name="model">supplier.series</field>
            <field name="arch" type="xml">
                <tree string="PO Series" version="7.0">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="po_series_form_action" model="ir.actions.act_window">
            <field name="name">Supplier Series</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">supplier.series</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="po_series_list_view"/>
        </record>
        <menuitem action="po_series_form_action"
            groups="base.group_no_one"
            id="menu_maize_po_series"
            parent="maize_product.menu_maize_config" sequence="2"/>
        
        <!--  inherit the res.user form view -->
        <record id="maize_inherit_user_form_view" model="ir.ui.view">
            <field name="name">inherit.maize.user.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <field name="login" position="after">
                    <label for="user_code" class="oe_edit_only"/>
                    <field name="user_code"/>
                </field>
            </field>
        </record>
          
        <!--  inherit the res.user tree view -->
        <record id="maize_inherit_user_tree_view" model="ir.ui.view">
            <field name="name">inherit.maize.user.tree</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree" />
            <field name="arch" type="xml">
                <field name="login" position="after">
                    <field name="user_code"/>
                </field>
            </field>
        </record>
    </data>
</openerp>