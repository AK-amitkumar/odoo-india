<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

	    <record id="view_branch_merge_report_tree" model="ir.ui.view">
	        <field name="name">branch.merge.report.tree</field>
	        <field name="model">branch.merge.report</field>
	        <field name="type">tree</field>
	        <field name="arch" type="xml">
	            <tree string="Branch Analysis">
 	                <field name="project_id" invisible="context.get('project_view', False)"/>
 	                <field name="added_lines_count"/>
                    <field name="removed_lines_count"/>
                    <field name="diff_lines_count"/>
                    <field name="diff_file_count"/>
                    <field name="delay_in_development"/>
                    <field name="delay_in_merge"/>
                    <field name="branch_type" invisible="context.get('type_view', True)"/>
                    <field name="state" invisible="context.get('state_view', True)"/>
	                <field name="date_created" invisible="1"/>
	                <field name="user_id" invisible="1"/>
	                <field name="target_branch_id" invisible="1"/>
	                <field name="stage" invisible="1"/>
	                <field name="year" invisible="1"/>
	                <field name="month" invisible="1"/>
	                <field name="day" invisible="1"/>
	                <field name="reviewer_user_id" invisible="1"/>
	            </tree>
	        </field>
	    </record>

	    <record id="view_branch_merge_report_search" model="ir.ui.view">
	        <field name="name">branch.merge.report.search</field>
	        <field name="model">branch.merge.report</field>
	        <field name="type">search</field>
	        <field name="arch" type="xml">
	            <search string="Branch Analysis">
	                 <group>
                        <filter icon="terp-go-year" string="Year" name="year"
                            domain="[('date_created','&lt;=', time.strftime('%%Y-%%m-%%d')),('date_created','&gt;=',time.strftime('%%Y-01-01'))]"
                            help="Work submmitted in current year"/>
                        <separator orientation="vertical"/>
                        <filter icon="terp-go-month" string="Month" name="month"
                            domain="[('date_created','&lt;=',(datetime.date.today()+relativedelta(day=31)).strftime('%%Y-%%m-%%d')),('date_created','&gt;=',(datetime.date.today()-relativedelta(day=1)).strftime('%%Y-%%m-%%d'))]"
                            help="Work submiited in current month"/>
                        <filter icon="terp-go-month" string="Month-1"
                             domain="[('date_created','&lt;=', (datetime.date.today() - relativedelta(day=31, months=1)).strftime('%%Y-%%m-%%d')),('date_created','&gt;=',(datetime.date.today() - relativedelta(day=1,months=1)).strftime('%%Y-%%m-%%d'))]" help="Work submmitted in last month"/>
                        <separator orientation="vertical"/>
                        <filter string="Development" domain="[('state','=','Development')]" help="Development" icon="terp-gtk-media-pause"/>
                        <filter string="Rejected" domain="[('state','=','Abandoned')]" help="Rejected" icon="gtk-cancel"/>
                        <filter string="Merged" domain="[('state','=','Merged')]" name="done" help="Merged" icon="terp-camera_test"/>
                        <separator orientation="vertical"/>
                        <field name="name"/>
                        <separator orientation="vertical"/>
                        <field name="date_created"/>
                        <separator orientation="vertical"/>
                        <field name="user_id">
                            <filter domain="[('user_id','=',uid)]"  help="My Proposal" icon="terp-personal" />
                        </field>
                        <separator orientation="vertical"/>
                        <field name="project_id"/>
                    </group>
                    <newline/>
	                <group expand="1" string="Group By...">
                        <filter string="Project" name="Project" icon="terp-accessories-archiver" context="{'group_by':'project_id', 'project_view':True}"/>
                        <filter string="Owner" name="user_id" icon="terp-personal" context="{'group_by':'user_id'}"/>
                        <filter string="Reviewer" name="reviewer_user_id" icon="terp-personal" context="{'group_by':'reviewer_user_id'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Target" name="group_target_branch_id" icon="terp-personal" context="{'group_by':'target_branch_id'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Type" name="group_type" icon="terp-stock_effects-object-colorize" context="{'group_by':'branch_type', 'type_view':True}"/>
                        <filter string="State" name="group_state" icon="terp-stock_effects-object-colorize" context="{'group_by':'state', 'state_view':True}"/>
                        <filter string="Stage" name="group_stage" icon="terp-stock_effects-object-colorize" context="{'group_by':'stage'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Year" icon="terp-go-year" context="{'group_by':'year'}"/>
                        <filter string="Month" icon="terp-go-month" context="{'group_by':'month'}"/>
                        <filter string="Day" icon="terp-go-today" context="{'group_by':'day'}"/>
                        <separator orientation="vertical"/>
                        <filter string="Date" name="group_date_created" icon="terp-go-month" context="{'group_by':'date_created'}"/>
                    </group>
	            </search>
	        </field>
	    </record>

	    <record id="action_branch_merge_report" model="ir.actions.act_window">
	        <field name="name">Branch Analysis</field>
	        <field name="res_model">branch.merge.report</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">tree</field>
	        <field name="context">{"search_default_month": 1, "search_default_Project":1, 'group_by_no_leaf':1, 'group_by':[]}</field>
	        <field name="domain">[]</field>
	        <field name="search_view_id" ref="view_branch_merge_report_search"/>
	    </record>

        <menuitem action="action_branch_merge_report" id="menu_branch_merge_report" parent="base.menu_project_report"/>

    </data>
</openerp>