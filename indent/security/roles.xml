<openerp>
  <data>
    <record model="ir.module.category" id="module_stock_indent">
      <field name="name">Indent</field>
      <field name="description">Helps you to handle roles and respoiciblities in indent management</field>
      <field name="sequence">7</field>
    </record>

    <record model="res.groups" id="stock_indent_user">
      <field name="name">Indentor</field>
      <field name="implied_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
      <field name="category_id" ref="module_stock_indent"/>
    </record>

    <record model="res.groups" id="stock_indent_manager">
      <field name="name">Manager</field>
      <field name="implied_ids" eval="[(4, ref('stock_indent_user'))]"/>
      <field name="users" eval="[(4, ref('base.user_root'))]"/>
      <field name="category_id" ref="module_stock_indent"/>
    </record>

    <record id="stock_indent_user_indent" model="ir.rule">
      <field name="name">My Indents</field>
      <field name="model_id" ref="model_stock_indent"/>
      <field name="groups" eval="[(4, ref('stock_indent_user'))]"/>
      <field name="domain_force">[('user_id','=',user.id)]</field>
    </record>

    <record id="stock_indent_user_indent" model="ir.rule">
      <field name="name">My Indents - Manager</field>
      <field name="model_id" ref="model_stock_indent"/>
      <field name="groups" eval="[(4, ref('stock_indent_manager'))]"/>
      <field name="domain_force">['|', ('user_id','=',user.id), ('manager_id','=',user.id)]</field>
    </record>

    <record id="stock_indent_user_indent" model="ir.rule">
      <field name="name">Operation Type Filter</field>
      <field name="model_id" ref="model_stock_picking_type"/>
      <field name="groups" eval="[(4, ref('stock_indent_user'))]"/>
      <field name="domain_force">['|', ('message_partner_ids','in',[user.partner_id.id]), ('manager_id','=',user.id)]</field>
    </record>

  </data>
</openerp>