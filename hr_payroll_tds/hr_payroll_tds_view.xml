<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <!-- Inherits salary head and adds tds checkbox -->

<record model="ir.ui.view" id="hr_allounce_deduction_categoty_tds">
    <field name="name">hr.allounce.deduction.categoty.tds</field>
    <field name="model">hr.allounce.deduction.categoty</field>
    <field name="inherit_id" ref="hr_payroll.hr_allounce_deduction_categoty_form"/>
    <field name="arch" type="xml">
        <data>
        <xpath expr="//field[@name='sequence']" position="after">
            <field name='tds'/>            
            <field name='tds_nature_id' attrs="{'invisible':[('tds','!=',True)],'required':[('tds','=',True)]}"/>
        </xpath>
        </data>
    </field>    
</record>

</data>
</openerp>
