<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_update_excise" model="ir.ui.view">
            <field name="name">update.excise.form</field>
            <field name="model">update.excise</field>
            <field name="arch" type="xml">
                <form string="Update Taxes" version="7.0">
                    <separator string="Update Taxes"/>
                    <group>
                        <group>
                            <label for="package_and_forwording"/>
                            <div>
                                <field name="packing_type"/>
                                <field name="package_and_forwording" class="oe_inline"/>
                            </div>
                            <field name="commission"/>
                        </group>
                        <group>
                            <field name="excise_ids" widget="many2many_tags" domain="[('tax_type','=','excise')]"/>
                            <field name="vat_ids" widget="many2many_tags" domain="[('tax_type','=','vat')]"/>
                            <label for="insurance"/>
                            <div>
                                <field name="insurance_type"/>
                                <field name="insurance" class="oe_inline"/>
                            </div>
                            <label for="freight"/>
                            <div>
                                <field name="freight_type"/>
                                <field name="freight" class="oe_inline"/>
                            </div>
                            <field name="other_discount"/>
                            <field name="discount_percentage"/>
                            <field name="other_tax_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Update Taxes" name="update_excise_amount" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_update_excise" model="ir.actions.act_window">
            <field name="name">Update Taxes</field>
            <field name="res_model">update.excise</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_update_excise"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
