<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_inventory_control_form" model="ir.ui.view">
            <field eval="1" name="priority"/>
            <field name="name">inventory.control.form</field>
            <field name="model">inventory.control</field>
            <field name="arch" type="xml">
                <form string="Inventory Control" version="7.0">
	                <group>
	                	<field name="select_query"/>
	                	<field name="po_series_id"/>
	                </group>
	                <group>
	                	<group>
	              			<field name="supplier_from_id"/>
	                    	<field name="item_code_from_id"/>
	                    	<field name="date_from"/>
	              		</group>
	              		<group>
	              			<field name="supplier_to_id"/>
	              			<field name="item_code_to_id"/>
	              			<field name="date_to"/>
	              		</group>
	                </group>	
                    <footer>
                    	<button name="get_data" string="OK" type="object" class="oe_highlight"/> or
                    	<button special="cancel" string="Close" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_inventory_control_form" model="ir.actions.act_window">
            <field name="name">Inventory Control</field>
            <field name="res_model">inventory.control</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_inventory_control_form"/>
            <field name="target">new</field>
        </record>
        
    </data>
</openerp>