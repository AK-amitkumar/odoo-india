<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Indent Purchase Report Tree View -->
        <record id="view_indent_purchase_report_tree" model="ir.ui.view">
            <field eval="1" name="priority"/>
            <field name="name">indent.purchase.report.tree</field>
            <field name="model">indent.purchase.report</field>
            <field name="arch" type="xml">
                <tree string="Maize Purchase Analysis" create="false" delete="false">
                    <field name="purchase_id" invisible="context.get('purchase_id_view',False)"/>
                    <field name="purchase_date" invisible="context.get('purchase_id_view',False)"/>
                    <field name="purchase_maize_id" invisible="context.get('purchase_maize_id',True)"/>
                    <field name="indentor_id" invisible="context.get('indentor_id_view',False)"/>
                    <field name="id" string="Indent No" invisible="context.get('indentor_id_view',False)"/>
                    <field name="indent_maize_id" invisible="context.get('indent_maize_id',True)"/>
                    <field name="po_series_id" invisible="context.get('po_series_id',True)"/>
                    <field name="contract_id" invisible="context.get('contract_id_view',True)"/>
                    <field name="date" invisible="context.get('date',True)"/>
                    <field name="indent_id" invisible="context.get('date',True)"/>
                    <field name="partner_id" invisible="context.get('partner_id_view',False)"/>
                    <field name="payment_term_id" invisible="context.get('payment_term_id_view',False)"/>
                    <field name="product_id"/>
                    <field name="product_uom_qty" sum="Total Quantity"/>
                    <field name="pending_qty" sum="Total Pending Quantity" invisible="context.get('pending_view',True)"/>
                    <field name="product_uom" invisible="context.get('product_uom_view',False)"/>
                    <field name="price_unit"/>
                    <field name="discount"/>
                    <field name="price_total"  sum="Total Untax"/>
                    <field name="excise_tax" invisible="context.get('tax',True)"/>
                    <field name="cess_tax" invisible="context.get('tax',True)"/>
                    <field name="st_tax" invisible="context.get('tax',True)"/>
                    <field name="insurance" invisible="context.get('tax',True)"/>
                    <field name="pending_value" sum="Total Pending Value" invisible="context.get('pending_view',True)"/>
                    <field name="puchase_total" sum="Total"/>
                    <field name="year" invisible="1"/>
                    <field name="day" invisible="1"/>
                    <field name="month" invisible="1"/>
                    <field name="date_planned" invisible="context.get('date_planned',True)"/>
                    <field name="delivey" invisible="context.get('delivey',True)"/>
                    <field name="department_id" invisible="context.get('department_id',True)"/>
                    <field name="requirement" invisible="context.get('requirement',True)"/>
                    <field name="type" invisible="context.get('type',True)"/>
                    <field name="item_for" invisible="context.get('item_for',True)"/>
                    <field name="nbr" sum="# of Lines" invisible="1"/>
                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting" invisible="context.get('analytic_account_id',True)"/>
                    <field name="state" invisible="context.get('state',True)"/>
                </tree>
            </field>
        </record>

		<!--  Indent Purchase Report Graph View -->
        <record id="view_maize_purchase_report_graph" model="ir.ui.view">
             <field name="name">indent.purchase.report.graph</field>
             <field name="model">indent.purchase.report</field>
             <field name="arch" type="xml">
                 <graph string="Maize Purchase Analysis" type="bar">
                     <field name="product_id"/>
                     <field name="price_unit"/>
                     <field name="state" group="True"/>
                 </graph>
             </field>
        </record>
		
        <!-- Indent Purchase Report Search View -->
        <record id="view_indent_purchase_report_search" model="ir.ui.view">
            <field name="name">indent.purchase.report.search</field>
            <field name="model">indent.purchase.report</field>
            <field name="arch" type="xml">
                <search string="Maize Purchase Analysis">
                    <field name="date"/>
                    <filter string="Indent" name="indent" domain="[('contract','=',False)]"/>
                    <filter string="Contract" name="contract" domain="[('contract','=',True)]"/>
                    <separator/>
                    <filter string="Draft" name="state_draft" domain="[('state','=','draft')]"/>
                    <filter string="Waiting For Approval" name="state_waiting_approval" domain="[('state','=','waiting_approval')]"/>
                    <filter string="Inprogress" name="state_inprogress" domain="[('state','=','inprogress')]"/>
                    <filter string="Received" name="state_received" domain="[('state','=','received')]"/>
                    <filter string="Rejected" name="state_reject" domain="[('state','=','reject')]"/>
                    <separator/>
                    <filter icon="terp-personal" string="My Indents" help="My Indents" domain="[('indentor_id', '=', uid)]"/>
                    <field name="indentor_id"/>
                    <field name="purchase_id"/>
                    <field name="purchase_date"/>
                    <group string="Display">
                        <filter name="group_department" string="Department" icon="terp-stock_symbol-selection" context="{'department_id': False}"/>
                        <filter name="group_analytic_accounting" string="Project" context="{'analytic_account_id': False}" groups="analytic.group_analytic_accounting"/>
                        <filter name="group_state" string="Status" icon="terp-stock_symbol-selection" context="{'state': False}"/>
                        <filter name="group_series" string="Series" icon="terp-stock_symbol-selection" context="{'po_series_id': False}"/>
                        <filter name="group_contract_id" string="Contract Series" icon="terp-stock_symbol-selection" context="{'contract_id_view': False}"/>
                        <filter name="group_date" string="Date of Indent" icon="terp-stock_symbol-selection" context="{'date': False}"/>
                        <filter name="group_purchase_maize_id" string="Purchase Order (maize)" icon="terp-stock_symbol-selection" context="{'purchase_maize_id': False}"/>
                        <filter name="group_indent_maize_id" string="Maize Indent" icon="terp-stock_symbol-selection" context="{'indent_maize_id': False}"/>
                        <filter name="group_payment_term_id" string="Payment Term" icon="terp-stock_symbol-selection" context="{'payment_term_id_view': False}"/>
                        <filter name="group pending" string="Pending calculation" context="{'pending_view': False}"/>
                        <filter name="gorup Excise" string="Excise,cess etc.." context="{'tax': False}"/>
                        <filter name="gorup Delidate" string="Delivery Date" context="{'date_planned': False}"/>
                        <filter name="gorup Mill" string="Ex. GoDown / Mill Delivey" context="{'delivey': False}"/>

                    </group>
                    
                    <group expand="1" string="Group By...">
                        <filter string="Indent" name="Indent" context="{'group_by':'indent_id', 'indent_id_view':True}"/>
                        <filter string="Indentor" name="Indentor" context="{'group_by':'indentor_id','indentor_id_view': True}"/>
                        <filter string="Purchase Order" name="Purchase" context="{'group_by':'purchase_id','purchase_id_view': True}"/>
                        <filter string="Order Date" name="Purchase" context="{'group_by':'purchase_date','purchase_id_view': True}"/>
                        <filter string="Purchase Order (maize)" name="Purchase" context="{'group_by':'purchase_maize_id','purchase_maize_id_view': True}"/>
                        <filter string="Department" context="{'group_by':'department_id','department_id_view': True}"/>
                        <filter string="Unit" context="{'group_by':'product_uom','product_uom_view': True}"/>
                        <filter string="Supplier" context="{'group_by':'partner_id','partner_id_view': True}"/>
                        <filter string="Payment Term" context="{'group_by':'payment_term_id','payment_term_id_view': True}"/>
                        <filter string="Series" context="{'group_by':'po_series_id','po_series_id_view': True}"/>
                        <filter string="Contract Series" context="{'group_by':'contract_id','contract_id_view': True}"/>
                        <filter string="Project" context="{'group_by':'analytic_account_id','analytic_account_id_view': True}" groups="analytic.group_analytic_accounting"/>
                        <filter string="Date of Indent" icon="terp-stock_symbol-selection" context="{'group_by':'date'}"/>
                        <filter string="Maize PO" icon="terp-stock_symbol-selection" context="{'group_by':'purchase_maize_id'}"/>
                        <filter string="Maize Indent" icon="terp-stock_symbol-selection" context="{'group_by':'indent_maize_id'}"/>
                        <filter string="Status" context="{'group_by':'state','state_view': True}"/>
                        <filter string="Day" context="{'group_by':'day'}"/>
                        <filter string="Month" name="order_month" context="{'group_by':'month'}"/>
                        <filter string="Year" context="{'group_by':'year'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Indent Purchase Report Action -->
        <record id="action_indent_purchase_report" model="ir.actions.act_window">
            <field name="name">Maize Purchase Analysis</field>
            <field name="res_model">indent.purchase.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,graph</field>
            <field name="search_view_id" ref="view_indent_purchase_report_search"/>
            <field name="view_id" ref="view_indent_purchase_report_tree"/>
            <field name="context">{'search_default_Indent':1, 'group_by_no_leaf':0, 'group_by':[]}</field>
            <field name="help">This report performs analysis on your indents.</field>
        </record>

        <!-- Indent Purchase Report Menus -->
        <menuitem action="action_indent_purchase_report" id="menu_indent_purchase_report" parent="stock.next_id_61" sequence="6"/>

    </data>
</openerp>
