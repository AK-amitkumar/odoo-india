<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Format RG 23 A Part 1 Report Tree View -->
        <record id="view_format_rg_report" model="ir.ui.view">
            <field eval="1" name="priority"/>
            <field name="name">format.rg.report.tree</field>
            <field name="model">format.rg</field>
            <field name="arch" type="xml">
                <tree string="Format RG 23 A Part 1" create="false" delete="false">
                	<field name="date"/> 
                    <field name="department_id"/>
                    <field name="product_qty"/>
                    <field name="product_uom_id"/>
                    <field name="partner_id"/>
                    <field name="city"/>
                    <field name="product_qty_1"/>
                    <field name="product_qty_2"/>
                </tree>
            </field>
        </record>
        
        <record id="view_format_rg_search" model="ir.ui.view">
            <field name="name">format.rg.search</field>
            <field name="model">format.rg</field>
            <field name="arch" type="xml">
                <search string="Department">
                    <group expand="0" string="Group By...">
                        <filter string="Department" context="{'group_by': 'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Format RG 23 A Part 1 Report Action -->
        <record id="action_format_rg_report" model="ir.actions.act_window">
            <field name="name">Format RG 23 A Part 1</field>
            <field name="res_model">format.rg</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="help">This report performs analysis for Format RG 23 A Part 1</field>
        </record>

        <!-- Format RG 23 A Part 1 Report Menu -->
        <menuitem action="indent.action_format_rg_datestart_from" id="menu_format_rg_report" parent="stock.next_id_61" sequence="95"/>

    </data>
</openerp>
