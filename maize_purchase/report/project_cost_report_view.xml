<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Project Cost Report Tree View -->
        <record id="view_project_cost_report_tree" model="ir.ui.view">
            <field eval="1" name="priority"/>
            <field name="name">project.cost.report.tree</field>
            <field name="model">project.cost.report</field>
            <field name="arch" type="xml">
                <tree string="Project Cost Analysis" create="false" delete="false">
                    <field name="puchase_total" sum="PO Total"/>
                    <field name="receipt_total" sum="Receipt Total"/>
                    <field name="difference"/>
                    <field name="indent_id" invisible="1"/>
                    <field name="nbr" sum="# of Lines" invisible="1"/>
                    <field name="analytic_account_id" groups="analytic.group_analytic_accounting" invisible="context.get('analytic_account_id',True)"/>
                    <field name="state" invisible="1"/>
                </tree>
            </field>
        </record>

		<!--  Project Cost Report Graph View -->
        <record id="view_project_cost_report_graph" model="ir.ui.view">
             <field name="name">project.cost.report.graph</field>
             <field name="model">project.cost.report</field>
             <field name="arch" type="xml">
                 <graph string="Project Cost Analysis" type="bar">
                     <field name="analytic_account_id"/>
                     <field name="puchase_total"/>
                     <field name="state" group="True"/>
                 </graph>
             </field>
        </record>
		
        <!-- Project Cost Report Search View -->
        <record id="view_project_cost_report_search" model="ir.ui.view">
            <field name="name">project.cost.report.search</field>
            <field name="model">project.cost.report</field>
            <field name="arch" type="xml">
                <search string="Project Cost Analysis">
                    <filter string="Indent" name="indent" domain="[('contract','=',False)]"/>
                    <filter string="Contract" name="contract" domain="[('contract','=',True)]"/>
                    <separator/>
                    <filter string="Draft" name="state_draft" domain="[('state','=','draft')]"/>
                    <filter string="Waiting For Approval" name="state_waiting_approval" domain="[('state','=','waiting_approval')]"/>
                    <filter string="Inprogress" name="state_inprogress" domain="[('state','=','inprogress')]"/>
                    <filter string="Received" name="state_received" domain="[('state','=','received')]"/>
                    <filter string="Rejected" name="state_reject" domain="[('state','=','reject')]"/>
                    <separator/>
                    <filter icon="terp-personal" string="My Indents" help="My Indents" domain="[('indentor_id', '=', uid)]"/>
                </search>
            </field>
        </record>

        <!-- Project Cost Report Action -->
        <record id="action_project_cost_report" model="ir.actions.act_window">
            <field name="name">Project Cost Analysis</field>
            <field name="res_model">project.cost.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,graph</field>
            <field name="search_view_id" ref="view_project_cost_report_search"/>
            <field name="view_id" ref="view_project_cost_report_tree"/>
            <field name="context">{'group_by_no_leaf':1, 'group_by':['analytic_account_id']}</field>
            <field name="help">This report performs analysis on your project cost.</field>
        </record>

        <!-- Project Cost Report Menus -->
        <menuitem action="action_project_cost_report" id="menu_project_cost_report" parent="stock.next_id_61" sequence="9"/>

    </data>
</openerp>
