<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Product Form View -->
        <record id="view_product_container_form" model="ir.ui.view">
            <field name="name">product.container.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Sales']" position="after">
                    <page string="Containers">
                        <group>
                            <field name="return_container"/>
                            <field name="product_container_id" attrs="{'invisible': [('return_container', '=', False)], 'required': [('return_container', '=', True)]}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
