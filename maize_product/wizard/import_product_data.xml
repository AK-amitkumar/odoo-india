<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
      <record id="view_import_product_data_form" model="ir.ui.view">
        <field name="name">import_product_data_form</field>
        <field name="model">import.product.data</field>
        <field name="arch" type="xml">
            <form string="Import Product" version="7.0">
               <group>
                    <separator string="Import Product Data"/>
               </group>
               <group>
                   <field name='file_path'/>
               </group>                
               <footer>
                    <button name="import_product_data" string="Import" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
               </footer>
           </form>
        </field>
    </record>

    <act_window 
        name="Import Product"
        res_model="import.product.data"
        src_model="product.product"
        view_mode="form"
        target="new"
        key2="client_action_multi"
        id="action_import_product_data_form" />

    </data>
</openerp>
