<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Inherit the Product Form For Product History Page-->
        <record id="inherit_product_normal_form_view" model="ir.ui.view">
            <field name="name">inherit.product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="priority">20</field>
            <field name="arch" type="xml">
               	<xpath expr="//field[@name='state']" position='replace'>
            	</xpath>
            	<xpath expr="//sheet" position='before'>
					<header>
                        <button string="Confirm" name="set_to_confirm" states="draft" type="object" class="oe_highlight" groups="base.group_user"/>
                        <button string="Approve" name="set_to_approve" states="confirm" type="object" class="oe_highlight" groups="purchase.group_purchase_manager"/>
                        <button string="Set To Draft" name="set_to_draft" states="cancel,done" type="object" groups="base.group_user"/>
                        <button string="Reject" name="set_to_reject" states="confirm" type="object" groups="base.group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>	                    
	                    
	                </header>
            	</xpath>
            	<xpath expr="//label[@for='name']" position='replace'>
            	</xpath>
            	<xpath expr="//field[@name='default_code']" position='replace'>
            		<field name='location'/>
            	</xpath>
            	<xpath expr="//h1" position='before'>
                      <h1><field name="default_code" readonly="1"/></h1>
                      <label for="name" string="Item Description" class="oe_edit_only"/>
            	</xpath>
               	<xpath expr="//h2" position='replace'>
               		<group>
               			<group col="6" class="oe_edit_only">
		               		<h2><field name="categ_id" attrs="{'required':[('type','=', 'product')]}" placeholder="e.g Local/Imported"/></h2>
		            		<h2><field name='major_group_id' attrs="{'required':[('type','=', 'product')]}" placeholder="Major Group"/></h2>
		            		<h2><field name='sub_group_id' attrs="{'required':[('type','=', 'product')]}" placeholder="Sub Group" domain="[('major_group_id','=',major_group_id)]"/></h2>
	            		</group>
            		</group>
            	</xpath>
<!--             	<xpath expr="//field[@name='categ_id']" position='after'>
            		<field name='major_group_id'/>
            	</xpath> -->
                <xpath expr="//page[@string='Accounting']" position='after'>
                    <page string='Product History'>
                        <group>
                            <group string="Last Year">
                                <field name='last_po_date'/>
                                <field name='last_po_series'/>
                                <field name='last_po_year'/>
                                <field name='last_po_no'/>
                                <field name='last_supplier_code'/>
                                <field name='last_supplier_rate'/>
                            </group>
                            <group string="Last Year">
                                <field name='last_recieve_date'/>
                                <field name='last_recieve_qty'/>
                                <field name='last_recieve_value'/>
                                <field name='last_issue_date'/>
                                <field name='last_issue_qty'/>
                                <field name='last_issue_value'/>
                            </group>
                            <group string="Current Year">
                                <field name='cy_opening_qty'/>
                                <field name='cy_opening_value'/>
                                <field name='cy_issue_qty'/>
                                <field name='cy_issue_value'/>
                            </group>last_po_series
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[@string='Accounting']" position='inside'>
                    <group>
                        <field name='ex_chapter'/>
                        <field name='ex_chapter_desc'/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='list_price']" position='after'>
                    <label for="variance"/>
                        <div>
                            <field name="variance" class="oe_inline"/>
                            <label string="%%"/>
                        </div>
                    <field name='status'/>last_po_series
                    <field name='item_type'/>
                </xpath>
                <xpath expr="//label[@for='purchase_ok']" position='after'>
                	<group>
                		<group>
	                		<label for="description"/>
		            	     <div>
		      			        <field name='desc2' placeholder="Description2"/>
			                    <field name='desc3' placeholder="Description3"/>
			                    <field name='desc4' placeholder="Description4"/>
		                    </div>
	                    </group>
                    </group>
                </xpath>


            </field>
        </record>
        <menuitem groups="base.group_no_one"
            id="menu_maize_config"
            name="Maize"
            parent="purchase.menu_purchase_config_purchase" sequence="50"/>
        <record id="product_series_form_view" model="ir.ui.view">
            <field name="name">product.order.series.form</field>
            <field name="model">product.order.series</field>
            <field name="arch" type="xml">
                <form string="Product Series" version="7.0">
                	<sheet>
	                    <group>
	                    	<group col="4">
		                        <field name="code"/>
		                        <field name="name"/>
	                        </group>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="product_series_list_view" model="ir.ui.view">
            <field name="name">product.order.series.tree</field>
            <field name="model">product.order.series</field>
            <field name="arch" type="xml">
                <tree string="Product Series" version="7.0">
	                <field name="code"/>
	                <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="product_series_form_action" model="ir.actions.act_window">
            <field name="name">Purchase Series</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.order.series</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_series_list_view"/>
        </record>
        <menuitem groups="base.group_no_one"
            id="menu_maize_product_config"
            name="Maize"
            parent="stock.menu_stock_configuration" sequence="50"/>
        <menuitem action="product_series_form_action"
            groups="base.group_no_one"
            id="menu_maize_po_series"
            parent="menu_maize_config" sequence="2"/>

<!-- product major group code -->

        <record id="product_major_group_form_view" model="ir.ui.view">
            <field name="name">product.major.group.form</field>
            <field name="model">product.major.group</field>
            <field name="arch" type="xml">
                <form string="Product Major Group" version="7.0">
                	<sheet>
	                    <group>
	                    	<group col="4">
		                        <field name="code"/>
		                        <field name="name"/>
	                        </group>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="product_major_group_list_view" model="ir.ui.view">
            <field name="name">product.major.group.tree</field>
            <field name="model">product.major.group</field>
            <field name="arch" type="xml">
                <tree string="Product Major Group" editable="top" version="7.0">
	                <field name="code"/>
	                <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="product_major_group_form_action" model="ir.actions.act_window">
            <field name="name">Product Major Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.major.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_major_group_list_view"/>
        </record>
        <menuitem action="product_major_group_form_action"
            groups="base.group_no_one"
            id="menu_maize_major_groups"
            parent="menu_maize_config" sequence="5"/>

<!-- product sub group code -->

        <record id="product_sub_group_form_view" model="ir.ui.view">
            <field name="name">product.sub.group.form</field>
            <field name="model">product.sub.group</field>
            <field name="arch" type="xml">
                <form string="Product Sub Group" version="7.0">
                	<sheet>
	                    <group>
	                    	<group col="4">
	                    		<field name="major_group_id"/>
		                        <field name="code"/>
		                        <field name="name"/>
	                        </group>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="product_sub_group_list_view" model="ir.ui.view">
            <field name="name">product.sub.group.tree</field>
            <field name="model">product.sub.group</field>
            <field name="arch" type="xml">
                <tree string="Product Sub Group" editable="top" version="7.0">
                	<field name="major_group_id"/>
	                <field name="code"/>
	                <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="product_sub_group_form_action" model="ir.actions.act_window">
            <field name="name">Product Sub Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.sub.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_sub_group_list_view"/>
        </record>
        <menuitem action="product_sub_group_form_action"
            groups="base.group_no_one"
            id="menu_maize_sub_groups"
            parent="menu_maize_config" sequence="5"/>
            
       <!-- Inherit stock location -->
        <record id="inherit_view_location_tree" model="ir.ui.view">
            <field name="name">inherit.stock.location.tree</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_tree2" />
            <field name="arch" type="xml">
            	<field name="complete_name" position='before'>
                      <field name="code"/>
            	</field>
           	</field>
        </record>   
        <record id="inherit_view_location_form" model="ir.ui.view">
            <field name="name">inherit.stock.location.form</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form" />
            <field name="arch" type="xml">
            	<xpath expr="//label[@for='name']" position='replace'>
            	</xpath>
            	<xpath expr="//h1" position='before'>
            		  <label for="code" class="oe_edit_only"/>
                      <h1><field name="code"/></h1>
                      <label for="name" class="oe_edit_only"/>
            	</xpath>
           	</field>
        </record>

        <!-- Product Search View -->
        <record id="view_product_inherited_search" model="ir.ui.view">
            <field name="name">product.product.search.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Group by...']" position="inside">
                    <filter string='Major Group' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'major_group_id'}"/>
                    <filter string='Sub Group' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'sub_group_id'}"/>
                </xpath>
                <field name="name" position="replace">
                    <field name="name" string="Product" filter_domain="['|', '|', '|', '|', '|', ('name', 'ilike', self), ('default_code', 'ilike', self), ('description', 'ilike', self), ('desc2', 'ilike', self), ('desc3', 'ilike', self), ('desc4', 'ilike', self)]"/>
                </field>
                <xpath expr="//group/filter[@string='Default Unit of Measure']" position="replace">
                    <filter string='Default Unit of Measure' icon="terp-mrp" domain="[]" context="{'group_by' : 'uom_id', 'uom_id_view':True}"/>
                </xpath>
            </field>
        </record>

        <record id="view_maize_product_report_tree" model="ir.ui.view">
            <field name="name">maize.product.product.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="Product Analysis" create="false">
                    <field name="default_code" string="Code"/>
                    <field name="name" string="Description"/>
                    <field name="categ_id" invisible="1"/>
                    <field name="type" invisible="1"/>
                    <field name="uom_id" string="Unit of Measure" groups="product.group_uom" invisible="context.get('uom_id_view', False)"/>
                    <field name="ex_chapter" string="Chapter"/>
                    <field name="min_qty" string="Min_Level"/>
                    <field name="max_qty" string="Max_Level"/>
                    <field name="major_group_id" invisible="1"/>
                    <field name="sub_group_id"  invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="maize_action_product_report" model="ir.actions.act_window">
            <field name="name">Product Analysis</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,graph</field>
            <field name="search_view_id"  eval="view_product_inherited_search"/>
            <field name="help">Product Analysis allows you to easily check and analyse your company stock.</field>
        </record>

        <record id="maize_action_product_report_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_maize_product_report_tree"/>
            <field name="act_window_id" ref="maize_action_product_report"/>
        </record>
        <menuitem action="maize_action_product_report"
            id="menu_action_maize_product_report"
            parent="stock.next_id_61" sequence="5"/>
        
    </data>
</openerp>
